@page
@model CardVaultApp.Pages_PlayingCards.EditModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>PlayingCard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlayingCard.ID" />
            <div class="form-group">
                
                <label asp-for="PlayingCard.Suit" class="control-label"></label>
                <input asp-for="PlayingCard.Suit" class="form-control" />
                <span asp-validation-for="PlayingCard.Suit" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="PlayingCard.Value" class="control-label"></label>
                <input asp-for="PlayingCard.Value" class="form-control" />
                <span asp-validation-for="PlayingCard.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="PlayingCard.Condition" class="control-label"></label>
                <input asp-for="PlayingCard.Condition" class="form-control" />
                <span asp-validation-for="PlayingCard.Condition" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="PlayingCard.Year" class="control-label"></label>
                <input asp-for="PlayingCard.Year" class="form-control" />
                <span asp-validation-for="PlayingCard.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="PlayingCard.ImageUrl" class="control-label"></label>
                <input asp-for="PlayingCard.ImageUrl" class="form-control" />
                <span asp-validation-for="PlayingCard.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
